<Popup x:Class="SnapRegisters.ManagerFunctionsPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnapRegisters"
        mc:Ignorable="d"
        >
    <Grid VerticalAlignment="Center">
        <StackPanel HorizontalAlignment="Center">
            <Button Content="Exit to Desktop" Background="{StaticResource ButtonColor}" Width="120" Height="40" Margin="10"/>
            <Button Content="Restart Station" Background="{StaticResource ButtonColor}" Width="120" Height="40" Margin="10"/>
            <Button Content="Shut Down Station" Background="{StaticResource ButtonColor}" Width="120" Height="40" Margin="10"/>
            <Button Content="Cancel" Background="{StaticResource ButtonColor}" Width="120" Height="40" Margin="10" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Popup>

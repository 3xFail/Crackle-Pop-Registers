<Page x:Class="SnapRegisters.ManagerOverrideBox"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Snap_Register_System_Interface.RegisterWindowParts.WPF_UI"
      mc:Ignorable="d" 
      Height="100" Width="300"
      Title="ManagerOverrideBox">

    <Grid Background="{StaticResource Background}">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Viewbox Margin="5">
            <TextBlock Text="Enter Manager Override Code"
				   HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Viewbox>
        <TextBox Name="UPCField" Width="0" Height="0"/>
        <TextBox Name="Override" Grid.Row="1"
				Margin="10"
				HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                KeyDown="Override_KeyDown">
        </TextBox>

    </Grid>
</Page>

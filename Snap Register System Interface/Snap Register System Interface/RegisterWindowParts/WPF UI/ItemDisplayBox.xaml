<UserControl x:Class="SnapRegisters.RegisterWindowParts.WPF_UI.ItemDisplayBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SnapRegisters.RegisterWindowParts.WPF_UI"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="500"
			 BorderBrush="Black"
			 BorderThickness="0"
			 >

    <Grid>
       
        <Grid.RowDefinitions>
            <RowDefinition Height=".50*"/>
            <RowDefinition Height=".50*"/>
        </Grid.RowDefinitions>
        <Viewbox HorizontalAlignment="Left">
            <TextBlock	Name="NameField"
					 VerticalAlignment="Bottom" TextAlignment="Left"
					Text="nil"/>
        </Viewbox>
        <Viewbox Grid.Row="1" HorizontalAlignment="Right">
            <TextBlock	Name="AmountField" 
					 VerticalAlignment="Top" TextAlignment="Right"
					Text="0.00"/>
        </Viewbox>
    </Grid>
</UserControl>

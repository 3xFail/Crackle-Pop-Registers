<UserControl x:Class="SnapRegisters.RegisterWindowParts.WPF_UI.ItemDisplayBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SnapRegisters.RegisterWindowParts.WPF_UI"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="500"
			 HorizontalAlignment="Stretch">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Viewbox>
            <TextBlock	Name="NameField" Grid.Column="0"
					HorizontalAlignment="Left" VerticalAlignment="Top" TextAlignment="Left"
					Text="nil"/>
        </Viewbox>
        <Viewbox Grid.Column="1" Grid.Row="1">
            <TextBlock	Name="AmountField" 
					HorizontalAlignment="Right" VerticalAlignment="Bottom" TextAlignment="Right"
					Text="0.00"/>
        </Viewbox>
    </Grid>
</UserControl>

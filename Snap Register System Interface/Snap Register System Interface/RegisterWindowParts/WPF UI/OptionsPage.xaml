<Page x:Class="Snap_Register_System_Interface.RegisterWindowParts.WPF_UI.OptionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Snap_Register_System_Interface.RegisterWindowParts.WPF_UI"
      mc:Ignorable="d" 
      d:DesignHeight="490" d:DesignWidth="900"
      Title="OptionsPage">

    <Border BorderBrush="Black" BorderThickness="4">
        <Grid Background= "{StaticResource Background}">

            <StackPanel Margin="10,45,576,10" ><!--Old margin values for 5 buttons 10,10,576,10-->
                <Button x:Name="Catalog_Button" Height="100" Content="Catalog" Click="Catalog_Button_Click">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFAAAAAA" Offset="1"/>
                            <GradientStop Color="White" Offset="0.433"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <Separator Opacity="0" Height="20"/>
                <!--<Button x:Name="Remove_Item_Button" Height="92" Content="Remove Item" Click="Remove_Item_Button_Click"/> -->
                <!--<Button x:Name="Remove_Discount_Button" Height="92" Content="Remove Discount" Click="Remove_Discount_Button_Click"/>-->
                <Button x:Name="Payment_Button" Content="Pay" Height="100" Click="Payment_Button_Click">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFAAAAAA" Offset="1"/>
                            <GradientStop Color="White" Offset="0.433"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <Separator Opacity="0" Height="20"/>
                <Button x:Name="Close_Button" Content="Close" Height="100" Click="Close_Button_Click">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFAAAAAA" Offset="1"/>
                            <GradientStop Color="White" Offset="0.433"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
            </StackPanel>
            <StackPanel Margin="321,45,255,10" >
                <Button x:Name="Override_Button" Height="100" Content="Override" Click="Override_Button_Click">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFAAAAAA" Offset="1"/>
                            <GradientStop Color="White" Offset="0.433"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <Separator Opacity="0" Height="20"/>
                <!--<Button x:Name="Remove_Coupon_Button" Height="92" Content="Remove Coupon" Click="Remove_Coupon_Button_Click"/>-->
                <!--<Button x:Name="Add_Discount_Button" Height="92" Content="Add Discount" Click="Add_Discount_Button_Click"/>-->
                <Button x:Name="Add_Cust_Button" Height="100" Content="Add Customer" Click="Add_Cust_Button_Click_1">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFAAAAAA" Offset="1"/>
                            <GradientStop Color="White" Offset="0.433"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <Separator Opacity="0" Height="20"/>
                <Button x:Name="Logout_Button" Content="Logout" Height="100" Click="Logout_Button_Click">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFAAAAAA" Offset="1"/>
                            <GradientStop Color="White" Offset="0.433"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
            </StackPanel>
            <TextBlock x:Name="statsBlock" FontSize="16" HorizontalAlignment="Left" Height="462" Margin="642,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240"/>
        </Grid>
    </Border>
</Page>

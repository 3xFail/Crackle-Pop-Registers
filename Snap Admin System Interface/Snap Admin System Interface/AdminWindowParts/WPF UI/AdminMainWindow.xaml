<Window x:Class="SnapRegisters.AdminMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnapRegisters"
        mc:Ignorable="d"
        Title="MainWindow"
        WindowState="Maximized" WindowStyle="SingleBorderWindow">
    <!--Height="768" Width="1024"-->

    <Grid Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="460*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="154*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="98*"/>
            <ColumnDefinition Width="224*"/>
            <ColumnDefinition Width="265*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>

        <DockPanel Margin="10,0,1.4,-0.147" Grid.RowSpan="3">
            <StackPanel Grid.Column="0" Margin="0,10,100,0">
                <TextBlock Name="Tabs" Margin="10" FontSize="20"></TextBlock>
                <Button x:Name="Inventory_btn" Margin="0,30" Click="btn_Inv" Height="60">Inventory</Button>
                <Button x:Name="Analysis_btn" Margin="0,30" Click="btn_Anal" Height="60">Analysis</Button>
                <Button x:Name="Employees_btn" Margin="0,30" Click="btn_Emp" Height="60">Employees</Button>
                <Button x:Name="Customers_btn" Margin="0,30" Click="btn_Cust" Height="60">Customers</Button>
                <Button x:Name="Sales_btn" Margin="0,30" Click="btn_Sales" Height="60">Sales</Button>
                <Button x:Name="Options_btn" Margin="0,30" Click="btn_Opt" Height="60">Options</Button>
            </StackPanel>
        </DockPanel>

        <Grid Name="GridTab" Grid.Column="1" Grid.ColumnSpan="5" Margin="0.6,0,-0.4,-0.147" Grid.RowSpan="3">
            <TabControl Name="InventoryTabs" Visibility="Visible">
                <TabItem Header="Inventory">
                    <Label Content="Content goes here..." />
                </TabItem>
            </TabControl>
            <TabControl Name="AnalysisTabs" Visibility="Collapsed">
                <TabItem Header="Gross Earnings">
                    <Label Content="Content goes here..." />
                </TabItem>
                <TabItem Header="Product Losses">
                    <Label Content="Content goes here..." />
                </TabItem>
                <StackPanel Height="100" Width="100"/>
            </TabControl>
            <TabControl Name="EmployeesTabs" Visibility="Collapsed" SelectionChanged="EmployeesTabs_SelectionChanged" Margin="-90,0,-0.2,-0.253">
                <TabItem Header="Search">
                    <StackPanel>
                        <TextBox Height="30" Width="672" HorizontalAlignment="Left" VerticalAlignment="Top" BorderThickness="1" Margin="10,10,0,0"/>
                        <Button x:Name="button" Height="26" Width="100" Content="Search" HorizontalAlignment="Left" Margin="10,10,0,0"/>
                        <ListBoxItem x:Name="ListOfEmp" Content="ListBoxItem" Height="390" Width="669" HorizontalAlignment="Left" VerticalContentAlignment="Top"  Margin="13,10,0,0" BorderThickness="1"/>
                    </StackPanel>
                </TabItem>
                <TabItem Header="Add">
                    <Label Content="Content goes here..." />
                </TabItem>
                <TabItem Header="Statistics">
                    <Label Content="Content goes here..." />
                </TabItem>
            </TabControl>
            <TabControl Name="CustomersTabs" Visibility="Collapsed">
                <TabItem Header="CustTab">
                    <Label Content="Content goes here..." />
                </TabItem>
            </TabControl>
            <TabControl Name="SalesTabs" Visibility="Collapsed">
                <TabItem Header="SaleTab">
                    <Label Content="Content goes here..." />
                </TabItem>
            </TabControl>
            <TabControl Name="OptionsTabs" Visibility="Collapsed">
                <TabItem Header="OptTab">
                    <Label Content="Content goes here..." />
                </TabItem>
            </TabControl>
        </Grid>




    </Grid>
</Window>

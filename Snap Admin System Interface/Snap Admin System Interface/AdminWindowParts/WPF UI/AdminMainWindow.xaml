<Window x:Class="SnapRegisters.AdminMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnapRegisters"
        mc:Ignorable="d"
        Title="Snap Admininstrator Program"
        WindowState="Maximized" WindowStyle="SingleBorderWindow" Height="840" Width="1293.6">
        <!--Height="350" Width="525">-->
        <!--WindowState="Maximized"  WindowStyle="SingleBorderWindow" d:DesignHeight="843.9" Width="1170.8">-->

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30*"/>
                <RowDefinition Height="300*"/>
                <RowDefinition Height="10*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100*"/>
                <ColumnDefinition Width="370*"/>
            </Grid.ColumnDefinitions>

            <!--panel of main navigational buttons-->
            <DockPanel LastChildFill="True" Grid.Column="0" Grid.Row="1">
                <StackPanel>
                    <Button x:Name="Inventory_btn" Margin="10,20,10,0" Click="btn_Inv" Height="60">Inventory</Button>
                    <Button x:Name="Analysis_btn" Margin="10,50,10,0" Click="btn_Anal" Height="60">Analysis</Button>
                    <Button x:Name="Employees_btn" Margin="10,50,10,0" Click="btn_Emp" Height="60">Employees</Button>
                    <Button x:Name="Customers_btn" Margin="10,50,10,0" Click="btn_Cust" Height="60">Customers</Button>
                    <Button x:Name="Sales_btn" Margin="10,50,10,0" Click="btn_Sales" Height="60">Sales</Button>
                    <Button x:Name="Options_btn" Margin="10,50,10,0" Click="btn_Opt" Height="60">Options</Button>
                </StackPanel>
            </DockPanel>

            <!--status bar-->
            <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2" Background="LightGray">
                <TextBlock>Status: Completed</TextBlock>
            </StackPanel>

            <!--section for subsections of each navigational button-->
            <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Margin="0,70,10,0" Grid.RowSpan="2">
                <Frame x:Name="NavigationFrame" Grid.Column="1" Grid.Row="1" NavigationUIVisibility="Hidden" />
            </Border>

        </Grid>
    </Window>

<Page x:Class="Snap_Admin_System_Interface.AdminWindowParts.WPF_UI.InventoryPages.CatalogInventoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Snap_Admin_System_Interface.AdminWindowParts.WPF_UI.InventoryPages"
      mc:Ignorable="d"
      Title="CatalogInventoryPage" Width="692" Height="376">

    <Grid>
        <DataGrid x:Name="Catalog" HorizontalAlignment="Left" Height="378" VerticalAlignment="Top" Width="693" 
                  CanUserSortColumns="True" AlternatingRowBackground="Gainsboro"  AlternationCount="2" Margin="0,0,-393,-78">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ProductID" CanUserSort="True" />
                <DataGridTextColumn Header="Name" CanUserSort="True"/>
                <DataGridTextColumn Header="Price" CanUserSort="True"/>
                <DataGridTextColumn Header="Barcode" CanUserSort="True" CanUserResize="False"/>
                <DataGridCheckBoxColumn Header="Active" CanUserSort="True" CanUserResize="False"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>

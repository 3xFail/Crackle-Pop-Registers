            <TextBox Height="23" HorizontalAlignment="Left" Margin="183,220,0,0" Name="textBoxAddress" VerticalAlignment="Top" Width="222" />

            <Button Content="Submit" Height="23" HorizontalAlignment="Left" Margin="183,250,0,0" Name="Submit" VerticalAlignment="Top" Width="70"/>
            <Button Content="Reset" Height="23" HorizontalAlignment="Left" Margin="259,250,0,0" Name="button2" VerticalAlignment="Top" Width="70"/>

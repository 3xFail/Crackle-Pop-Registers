<Page x:Class="Snap_Admin_System_Interface.AdminWindowParts.WPF_UI.CatalogCustomerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Snap_Admin_System_Interface.AdminWindowParts.WPF_UI"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="CatalogCustomerPage">

    <Grid>
        <DataGrid x:Name="CustomerGrid" HorizontalAlignment="Left" Margin="123,10,0,0" VerticalAlignment="Top" CanUserAddRows="False" CanUserDeleteRows="False" SelectionMode="Single" BeginningEdit="CustomerGrid_BeginningEdit" CellEditEnding="CustomerGrid_CellEditEnding">
            <DataGrid.Columns>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Commit" Click="CommitButton_Click" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Page>

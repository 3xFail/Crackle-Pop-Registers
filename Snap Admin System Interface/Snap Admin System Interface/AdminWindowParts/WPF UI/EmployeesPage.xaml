<Page x:Class="Snap_Admin_System_Interface.AdminWindowParts.WPF_UI.EmployeesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Snap_Admin_System_Interface.AdminWindowParts.WPF_UI"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="EmployeesPage">

    <Grid>
        <StackPanel Grid.Column="1" Grid.ColumnSpan="4" Grid.Row="1" >
            <Button x:Name="EmpAddBtn" Content="Add" Click="btn_AddEmp" Height="50"/>
            <Button x:Name="EmpRemoveBtn" Content="Remove" Height="50"/>
            <Button x:Name="EmpSearchBtn" Content="Search" Click="btn_SearchEmp" Height="50"/>
            <Button x:Name="EmpBackBtn" Content="Back" Height="50"/>
        </StackPanel>

        <Grid>
            <Frame x:Name="EmpNavigationFrame" NavigationUIVisibility="Hidden" />
        </Grid>
    </Grid>
    
</Page>

<Page x:Class="Snap_Admin_System_Interface.AdminWindowParts.WPF_UI.PermissionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Snap_Admin_System_Interface.AdminWindowParts.WPF_UI"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="PermissionsPage">

    <Grid>
        <DataGrid x:Name="PermissionsGrid" SelectionMode="Single" SelectionChanged="PermissionsGrid_SelectionChanged" AutoGenerateColumns="False" CanUserDeleteRows="False" CanUserResizeRows="False" HorizontalAlignment="Left" Margin="10,24,0,0" VerticalAlignment="Top">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Path=Name}">
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel x:Name="CheckBoxSP" HorizontalAlignment="Left" Margin="114,24,0,0" VerticalAlignment="Top">
        </StackPanel>

    </Grid>
</Page>

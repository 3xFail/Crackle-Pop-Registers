<Page x:Class="Snap_Admin_System_Interface.AdminWindowParts.WPF_UI.SearchEmployeePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Snap_Admin_System_Interface.AdminWindowParts.WPF_UI"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="SearchEmployeePage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="233*"/>
            <ColumnDefinition Width="70*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="121*"/>
        </Grid.RowDefinitions>
        <TextBox Height="23" Name="text_search"  VerticalAlignment="Top" Grid.Column="0" Grid.Row="0" Margin="10,10,10,0"/>
        <Button Background="LightGray" Height="23" Name="seach_btn" Content="Search" VerticalAlignment="Top" Grid.Column="1" Margin="0,10,10,0"/>
        <ListBox x:Name="listofEmp" Margin="10,0,10,10" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"/>
    </Grid>

    <!--<TextBox Height="23" Name="text_search" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,30,0,0" Width="200"
          Text="{Binding TextSearch, UpdateSourceTrigger=PropertyChanged}"/>-->
</Page>

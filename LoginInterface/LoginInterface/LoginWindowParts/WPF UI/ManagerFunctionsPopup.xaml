<Window x:Class="SnapRegisters.ManagerFunctionsPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnapRegisters"
        mc:Ignorable="d"
        Title="ManagerFunctionsPopup" Height="300" Width="300" 
        WindowStyle="None"
        >
    <Grid VerticalAlignment="Center">
        <StackPanel HorizontalAlignment="Center">
            <Button Content="Exit to Desktop" Width="120" Height="40" Margin="10"/>
            <Button Content="Restart Station" Width="120" Height="40" Margin="10"/>
            <Button Content="Shut Down Station" Width="120" Height="40" Margin="10"/>
            <Button Content="Cancel" Width="120" Height="40" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
